//Avarage of two numbers using Scanner class
import java.util.Scanner;
class Avarage {
	public static void main(String[]args){
	int a, b,c,n;
	double Avg;
	Scanner sc =new Scanner(System.in);
	
	System.out.println("Enter the Mathematics marks: ");
	a=sc.nextInt();
	System.out.println("Enter the Science marks: ");
	b=sc.nextInt();
	System.out.println("Enter the Social marks:");
	c=sc.nextInt();
	n=(a+b+c);
	Avg=n/3.0;

	System.out.println("The Avg of three subjects "+Avg);
}
}
